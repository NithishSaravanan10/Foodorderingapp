  <li><a asp-controller="Home" asp-action="Logout" >Logout</a></li> *@
    <li class="dropdown">
              <i class="bi bi-list dropbtn" style="color: rgb(255, 255, 255);"></i>
                <div class="dropdown-content">
                    <p>@ViewBag.Session</p>
                    <a asp-controller="Home" asp-action="Login">Login</a>
                    <a asp-controller="Home" asp-action="Logout">Logout</a>
                    <a asp-controller="Home" asp-action="ViewOrders">View Orders</a>
                </div>
    </li>

</nav>