<style>
    body{
      background-color: rgb(223, 217, 222);
    }

  *{
    margin:0;
    padding:0;
    font-family: 'poppins', sans-serif;
  }

  .header{
    width: 100%;
    height:6rem;
    display: flex;
    align-items: center;
  }

  .logo{
    text-decoration: none;
    font-size: 40px;
    font-weight: 700;
    margin-left:30px;
    color: blueviolet;
  }
  .search{
    height: 40px;
    border: 1px solid #080808;
    border-radius: 3rem;
    width:45%;
    margin-left:20%;
    padding-left:22px;
  }
  .button{
    text-decoration:none;
  }
  .button:hover{
    color: #030303;
  }
  .navbar{
    width:100%;
    display:flex;
    justify-content: space-around;
    align-items: center;
    background-color:rgb(0, 0, 0);
    align-items:center;
    @* border: 2px solid black; *@
  }
  .navbar li{
    list-style:none;
    display:block;
    @* border:2px solid black; *@
  }
  .navbar li a{
    color:#ffffff;
    text-decoration:none;
  }
  .navbar li a:hover{
    color:#333;
  
  }

  .dropbtn {
    color: rgb(250, 246, 246);

} 

.dropdown span{
    font-size: 2rem;
    color: rgb(99, 99, 153);
}
.dropdown-content {
  display: none;
  position: absolute;
  background-color: black;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  right: 0;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}
.dropdown-content p{
    font-size: 2.5rem;
    text-align: center;
    color: rgb(61, 92, 92);

}
.dropdown-content a:hover {background-color: white;}

.dropdown:hover .dropdown-content {display: block;}


</style>

  <nav class="header" id="header">
    <h1>Online Food Order</h1>
   
    @* <button class="button" type="submit" ><i class="fa fa-search"></i></button> *@
  </nav>

<nav class="navbar" id="navbar">
  <li><a asp-controller="Home" asp-action="Index">Home</a></li>
  <li><a asp-controller="Home" asp-action="about">About</a></li>
  <li><a asp-controller="Home" asp-action="PutFeedback">Contact</a></li>
    <li><a asp-controller="Home" asp-action="foodPage" >Menu</a></li>
